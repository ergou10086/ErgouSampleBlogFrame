<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-4">编辑文章</h3>
                
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                
                <% if (post) { %>
                    <form action="/posts/<%= post.slug %>/edit" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label">标题</label>
                            <input type="text" class="form-control" id="title" name="title" 
                                   value="<%= post.title %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">内容</label>
                            <textarea class="form-control" id="content" name="content" rows="15" required><%= post.content %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="status" class="form-label">状态</label>
                            <select class="form-select" id="status" name="status">
                                <option value="published" <%= post.status === 'published' ? 'selected' : '' %>>发布</option>
                                <option value="draft" <%= post.status === 'draft' ? 'selected' : '' %>>草稿</option>
                            </select>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">保存更改</button>
                            <a href="/posts/<%= post.slug %>" class="btn btn-secondary">取消</a>
                        </div>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
</div>

